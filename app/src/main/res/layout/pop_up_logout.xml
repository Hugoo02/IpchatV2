<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_pop_up"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/pop_up_style"
    android:padding="20dp"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/textViewLogout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tem a certeza que deseja terminar sessÃ£o?"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/mark_pro_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_confirm_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Confirmar"
        android:textSize="14dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/mark_pro_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLogout"/>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Cancelar"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:fontFamily="@font/mark_pro"
        android:backgroundTint="@color/white"
        app:layout_constraintLeft_toRightOf="@id/button_confirm_logout"
        app:layout_constraintTop_toBottomOf="@id/textViewLogout"/>

</androidx.constraintlayout.widget.ConstraintLayout>