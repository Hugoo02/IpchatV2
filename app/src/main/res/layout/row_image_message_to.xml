<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/textViewNameImageTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewContactPhotoTo"
        app:layout_constraintStart_toEndOf="@+id/imageViewContactPhotoTo"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewContactPhotoTo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewMessageTo"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="76dp" />

    <ImageView
        android:id="@+id/imageViewMessageTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:maxWidth="220dp"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="14dp"
        android:paddingBottom="6dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewContactPhotoTo"
        app:layout_constraintTop_toTopOf="@+id/imageViewContactPhotoTo" />

    <ImageView
        android:id="@+id/progressBarImageTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:maxWidth="220dp"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="14dp"
        android:paddingBottom="6dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewContactPhotoTo"
        app:layout_constraintTop_toTopOf="@+id/imageViewContactPhotoTo" />

</androidx.constraintlayout.widget.ConstraintLayout>