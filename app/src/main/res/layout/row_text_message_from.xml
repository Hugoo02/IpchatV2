<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp" >

    <TextView
        android:id="@+id/textViewChatMessageFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_rectangle_message_from"
        android:fontFamily="@font/roboto"
        android:maxWidth="220dp"
        android:paddingStart="14dp"
        android:paddingTop="6dp"
        android:paddingEnd="10dp"
        android:paddingBottom="6dp"
        android:text="This is my message"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewChatMessageTimeStampFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="00/00"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewChatMessageFrom"
        app:layout_constraintTop_toBottomOf="@+id/textViewChatMessageFrom" />

</androidx.constraintlayout.widget.ConstraintLayout>