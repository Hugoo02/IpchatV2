<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewPhotoTo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewChatMessageTo" />

    <TextView
        android:id="@+id/textViewChatMessageTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/message_removed"
        android:fontFamily="@font/roboto"
        android:maxWidth="220dp"
        android:minHeight="40dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="14dp"
        android:paddingBottom="6dp"
        android:text="This is my message"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewPhotoTo"
        app:layout_constraintTop_toTopOf="@+id/imageViewPhotoTo" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewPhotoTo"
        app:layout_constraintStart_toEndOf="@+id/imageViewPhotoTo"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>