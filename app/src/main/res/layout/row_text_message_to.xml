<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewPhotoTo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewChatMessageTo" />

    <TextView
        android:id="@+id/textViewChatMessageTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_rectangle_message_to"
        android:fontFamily="@font/roboto"
        android:maxWidth="220dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="14dp"
        android:paddingBottom="6dp"
        android:text="This is my message"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/imageViewPhotoTo"
        app:layout_constraintStart_toEndOf="@+id/imageViewPhotoTo" />

    <TextView
        android:id="@+id/textViewChatMessageTimeStampTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="00/00"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/textViewChatMessageTo"
        app:layout_constraintTop_toBottomOf="@+id/textViewChatMessageTo" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Hugo Oliveira"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewPhotoTo"
        app:layout_constraintStart_toEndOf="@+id/imageViewPhotoTo"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>