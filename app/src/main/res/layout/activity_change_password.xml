<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.ChangePasswordActivity"
    android:background="#0F4F33">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="122dp"
      android:layout_height="27dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="124dp"
      android:layout_marginTop="187dp"
      android:layout_marginEnd="124dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ipchat" />


  <TextView
      android:id="@+id/textEmail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageView"
      android:layout_marginStart="63dp"
      android:layout_marginTop="92dp"
      android:text="Palavra-passe atual"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      android:textColor="#FFFFFF"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView" />

  <EditText
      android:id="@+id/editTextEmail"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_below="@+id/textEmail"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="63dp"
      android:layout_marginTop="7dp"
      android:layout_marginEnd="63dp"
      android:background="@drawable/edit_text_rounded"
      android:ems="10"
      android:hint="atual"
      android:inputType="textEmailAddress"
      android:paddingLeft="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textEmail" />

  <TextView
      android:id="@+id/textPass"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/editTextEmail"
      android:layout_marginStart="63dp"
      android:layout_marginTop="15dp"
      android:text="Confirmar palavra-passe"
      android:textColor="#FFFFFF"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
      tools:ignore="MissingConstraints" />

  <EditText
      android:id="@+id/editTextPassword"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_below="@+id/textPass"
      android:layout_marginStart="63dp"
      android:layout_marginTop="7dp"
      android:layout_marginEnd="63dp"
      android:background="@drawable/edit_text_rounded"
      android:ems="10"
      android:hint="nova"
      android:inputType="textPassword"
      android:paddingLeft="20dp"
      app:layout_constraintEnd_toEndOf="@+id/editTextEmail"
      app:layout_constraintHorizontal_bias="0.404"
      app:layout_constraintStart_toStartOf="@+id/editTextEmail"
      app:layout_constraintTop_toBottomOf="@+id/textNewPass" />

  <TextView
      android:id="@+id/textNewPass"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/editTextPassword"
      android:layout_marginStart="63dp"
      android:layout_marginTop="15dp"
      android:text="Palavra-passe nova"
      android:textColor="#FFFFFF"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
      tools:ignore="MissingConstraints" />

  <EditText
      android:id="@+id/newPasswordRepeat"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_below="@+id/textNewPass"
      android:layout_marginStart="63dp"
      android:layout_marginTop="7dp"
      android:layout_marginEnd="63dp"
      android:background="@drawable/edit_text_rounded"
      android:ems="10"
      android:hint="confirmar nova"
      android:inputType="textPassword"
      android:paddingLeft="20dp"
      app:layout_constraintEnd_toEndOf="@+id/editTextEmail"
      app:layout_constraintStart_toStartOf="@+id/editTextEmail"
      app:layout_constraintTop_toBottomOf="@+id/textPass" />

  <android.widget.Button
      android:id="@+id/buttonLogin"
      android:layout_width="match_parent"
      android:layout_height="46dp"
      android:layout_below="@+id/newPasswordRepeat"
      android:layout_marginStart="122dp"
      android:layout_marginTop="19dp"
      android:layout_marginEnd="122dp"
      android:background="@drawable/buttonwhite"
      android:text="Confirmar"
      android:textColor="#000000"
      android:textStyle="normal|bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/newPasswordRepeat" />


</androidx.constraintlayout.widget.ConstraintLayout>